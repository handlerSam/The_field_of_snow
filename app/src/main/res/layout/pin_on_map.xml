<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/place"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginStart="40px"
        android:layout_marginTop="40px"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <ImageView
        android:id="@+id/pinIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pin_green" />
    </LinearLayout>

    <TextView
        android:id="@+id/placeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="斯大林格勒"
        android:textColor="@color/colorWhite"
        android:textSize="32px"
        android:layout_marginTop="80px"
        app:layout_constraintEnd_toEndOf="@id/place"
        app:layout_constraintStart_toStartOf="@id/place"
        app:layout_constraintTop_toTopOf="@id/place" />

    <TextView
        android:id="@+id/teamText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="120px"
        android:layout_marginTop="30px"
        android:background="@color/colorPauseShade"
        android:text=""
        android:textColor="@color/colorWhite"
        android:textSize="20px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>