<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/card_icon"
    android:layout_margin="10px"
    android:layout_width="128px"
    android:layout_height="150px">
    <FrameLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10px"
        android:layout_width="100px"
        android:layout_height="100px">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/hurtStateIcon"
            android:src="@drawable/agzicon"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/frame"
            />
    </FrameLayout>


    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5px"
        android:layout_width="128px"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/hurtStateBefore"
            android:text="受击"
            android:textSize="17px"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorWhite"
            android:background="@drawable/pinkrect"
            android:layout_marginStart="5px"
            android:layout_width="40px"
            android:layout_height="23px" />
        <ImageView
            android:id="@+id/temp15"
            android:src="@drawable/arrow"
            android:layout_gravity="center_vertical"
            android:layout_width="28px"
            android:layout_height="28px" />
        <TextView
            android:id="@+id/hurtStateAfter"
            android:layout_width="40px"
            android:layout_height="23px"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5px"
            android:textColor="@color/colorWhite"
            android:background="@drawable/grey2rect"
            android:gravity="center"
            android:text="自动"
            android:textSize="17px" />
    </LinearLayout>
</LinearLayout>