<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/weaponIconOnClick"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_marginVertical="10px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_icon">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_marginStart="10px"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/weaponIcon"
                android:adjustViewBounds="true"
                android:src="@drawable/sx2icon"
                android:layout_margin="10px"
                android:layout_width="100px"
                android:layout_height="100px"/>
            <ImageView
                android:adjustViewBounds="true"
                android:src="@drawable/frame2"
                android:layout_margin="10px"
                android:layout_width="100px"
                android:layout_height="100px"/>
            <TextView
                android:id="@+id/weaponIconQuality"
                android:layout_width="60px"
                android:layout_height="27px"
                android:layout_marginTop="90px"
                android:layout_marginStart="65px"
                android:adjustViewBounds="true"
                android:background="@drawable/bluerect"
                android:gravity="center"
                android:text="稀有"
                android:textColor="@color/colorWhite"
                android:textSize="20px" />
        </FrameLayout>
        <TextView
            android:id="@+id/temp11"
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_marginVertical="15px"
            android:layout_marginHorizontal="10px"
            android:background="@color/colorWhite"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_marginStart="5px"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/weaponIconName"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10px"
                    android:layout_height="50px"
                    android:singleLine="false"
                    android:text="增强型狙击步枪"
                    android:textColor="@color/colorYellow"
                    android:textSize="40px"
                    android:visibility="visible"/>

            </LinearLayout>

            <TextView
                android:id="@+id/weaponIconIllustration"
                android:layout_marginTop="10px"
                android:layout_marginStart="20px"
                android:layout_width="wrap_content"
                android:layout_height="60px"
                android:singleLine="false"
                android:text="攻击力+35%"
                android:textColor="@color/colorWhite"
                android:textSize="27px"
                android:visibility="visible"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/weaponIconOnChosen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/colorBlue"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/weaponIconUnavailable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/colorUnavailable"
        android:visibility="invisible"/>
</FrameLayout>
