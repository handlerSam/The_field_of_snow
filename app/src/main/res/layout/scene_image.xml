<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20px"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/interactionImageView"
        android:layout_width="600px"
        android:layout_height="300px"
        android:background="@drawable/interaction_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/interactionChineseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商店"
        android:textColor="@color/colorWhite"
        android:textSize="70px"
        android:layout_marginEnd="30px"
        android:layout_marginBottom="30px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/interactionEnglishTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop"
        android:textColor="@color/colorWhite"
        android:textSize="30px"
        android:layout_marginTop="80px"
        app:layout_constraintTop_toTopOf="@id/interactionChineseTextView"
        app:layout_constraintEnd_toEndOf="@id/interactionChineseTextView"
        app:layout_constraintStart_toStartOf="@id/interactionChineseTextView"/>
</androidx.constraintlayout.widget.ConstraintLayout>